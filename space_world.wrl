#VRML V2.0 utf8

# Uzay Sahnesi - 3 Coplu Debris Avoidance (Gelistirilmis)

WorldInfo {
  title "Satellite Debris Avoidance - Enhanced"
}

Background {
  skyColor [0 0 0.05]
}

DirectionalLight {
  direction -1 -1 -1
  intensity 0.8
}

# DUNYA
DEF EARTH Transform {
  translation 0 0 0
  children [
    Shape {
      appearance Appearance {
        material Material {
          diffuseColor 0.1 0.3 0.7
          emissiveColor 0.05 0.1 0.2
        }
      }
      geometry Sphere { radius 6.371 }
    }
  ]
}

# UYDU - Basit kutu ve Takip Kamerası
DEF SATELLITE Transform {
  translation 7 0 0
  children [
    # --- ULTRA TAKİP (Dünyaya Çarpmaz) ---
    # Bu kamera uyduya çok yakındır (0.5 birim), 
    # bu sayede uydu dönse bile Dünya'nın içine girmez.
    Viewpoint {
      position 0.3 0.3 0.5   # Çok yakın ve çapraz
      orientation -0.2 0.9 0.1 0.4
      fieldOfView 1.2        # Geniş açı (balık gözü gibi)
      description "GÜVENLİ TAKİP (KLİPSİZ)"
    }
    # Alternatif: Üstten Görünüm (Z ekseni için en iyisi)
    Viewpoint {
      position 0 0.6 0
      orientation 1 0 0 -1.57
      fieldOfView 1.0
      description "ÜSTTEN TAKİP"
    }
    Shape {
      appearance Appearance {
        material Material {
          diffuseColor 0 0.9 1
          emissiveColor 0 0.4 0.5
          shininess 0.8
        }
      }
      geometry Box { size 0.15 0.15 0.15 }
    }
  ]
}

